<Window x:Class="MeuProjetoWPF.TelaCadastro"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MeuProjetoWPF"
        mc:Ignorable="d"
        Title="TelaCadastro" Height="300" Width="300" Background="#FF3BB021">
    <Grid>
        <Label x:Name="label" Content="Cadastro Cliente" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="Bold"/>
        <Label x:Name="label1" Content="Nome:" HorizontalAlignment="Left" Margin="10,73,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtNome" HorizontalAlignment="Left" Height="23" Margin="60,77,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" LostFocus="txtNome_LostFocus"/>
        <Button x:Name="btnSalvar" Content="Salvar" HorizontalAlignment="Left" Margin="120,222,0,0" VerticalAlignment="Top" Width="85" IsEnabled="False"/>
        <CheckBox x:Name="checkBox" Content="CheckBox" HorizontalAlignment="Left" Margin="60,131,0,0" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
